{% extends 'base.html.twig' %}

{% block body %}

<div class="d-flex flex-row justify-content-between mb-5">
<h1 class="display-4">Prochain cours: le lundi 23 décembre<h1>
</div>


{% for courseId, courseData in courses %}
<div class ="container">
<div class="jumbotron">
   

        
            <h1 class="display-6">
            <a href ="{{ path('select_course', {'id': courseId}) }}"> {{ courseData.course }}</a></h1> <h2 class="display-8">Prochain cours: {{ courseData.nextCourse }}</h2><hr>
